# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_APP_TOKEN=xapp-your-app-token
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_CHANNEL_ID=C0123456789

# LLM Configuration
LLM_PROVIDER=unity  # Options: unity, anthropic, mock
LLM_MODEL=claude-3-sonnet

# Unity AI Configuration (if LLM_PROVIDER=unity)
UNITY_AI_API_KEY=your-unity-ai-api-key
UNITY_AI_API_BASE=https://api.unity.ai/v1

# Anthropic Configuration (if LLM_PROVIDER=anthropic)
# ANTHROPIC_API_KEY=your-anthropic-api-key
# ANTHROPIC_MODEL=claude-3-sonnet-20240229

# etcd Configuration
ETCD_SERVER=localhost
ETCD_PORT=2379
ETCD_PREFIX=/discovery/

# AWX Configuration
AWX_SERVER=localhost

# AWX Authentication - Choose ONE option:

# Option 1: Personal Access Token
# AWX_TOKEN=your_personal_access_token

# Option 2: OAuth2 Resource Owner Password-Based
AWX_CLIENT_ID=your_client_id
AWX_CLIENT_SECRET=your_client_secret
AWX_USERNAME=admin
AWX_PASSWORD=your_password

# Application Configuration
LOG_LEVEL=INFO
HEALTH_PORT=8080
ETCD_AWX_SYNC_PATH=/app/etcd-awx-sync
